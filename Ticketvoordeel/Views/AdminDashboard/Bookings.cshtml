
@{
    ViewData["Title"] = "Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <h1 class="page-title">Bookings</h1>
</div>
<div class="page-content fade-in-up">
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title">User bookings List</div>
        </div>
        <div class="ibox-body">
            <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>BookDate</th>
                        <th>IsRoundTrip</th>
                        <th>DeparturePnr</th>
                        <th>ReturnPnr</th>
                        <th>TotalAmount</th>
                        <th>PaidAmount</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $.get("/admin/getbookings", function (res) {
                if (res) {
                    for (i = 0; i < res.length; i++) {
                        $('#example-table').dataTable().fnAddData([
                            res[i].name,
                            res[i].mobile,
                            res[i].email,
                            res[i].creationTime,
                            res[i].isRoundTrip,
                            res[i].departurePnr,
                            res[i].returnPnr,
                            res[i].totalAmount,
                            res[i].paidAmount
                        ]);
                    }
                }
            });
        });

    </script>
}



