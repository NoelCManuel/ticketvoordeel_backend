
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <a href="/managedynamicpages">
                <div class="ibox bg-success color-white widget-stat">
                    <div class="ibox-body">
                        <h2 class="m-b-5 font-strong">@TempData["DynamicPagesCount"]</h2>
                        <div class="m-b-5">Dynamic Pages</div><i class="ti-package widget-stat-icon"></i>
                        <div><i class="fa fa-level-up m-r-5"></i></div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="/managelastminutedeals">
                <div class="ibox bg-danger color-white widget-stat">
                    <div class="ibox-body">
                        <h2 class="m-b-5 font-strong">@TempData["LastminuteDealsCount"]</h2>
                        <div class="m-b-5">Last Minute Deals</div><i class="ti-shopping-cart widget-stat-icon"></i>
                        <div><i class="fa fa-level-up m-r-5"></i></div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="/bookings">
                <div class="ibox bg-green color-white widget-stat">
                    <div class="ibox-body">
                        <h2 class="m-b-5 font-strong">@TempData["BookingsCount"]</h2>
                        <div class="m-b-5">Bookings</div><i class="ti-shopping-cart widget-stat-icon"></i>
                        <div><i class="fa fa-level-up m-r-5"></i></div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="/usercredits">
                <div class="ibox bg-blue-100 color-white widget-stat">
                    <div class="ibox-body">
                        <h2 class="m-b-5 font-strong">@TempData["UsersCount"]</h2>
                        <div class="m-b-5">Users & Credits</div><i class="ti-shopping-cart widget-stat-icon"></i>
                        <div><i class="fa fa-level-up m-r-5"></i></div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

